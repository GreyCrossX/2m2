# Core services
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/2m2
REDIS_URL=redis://localhost:6379/0

# Auth / crypto (required)
SECRET_KEY=replace_me_with_strong_secret
CREDENTIALS_MASTER_KEY=replace_me_with_strong_master_key

# Worker defaults
WORKER_SYMBOLS=BTCUSDT,ETHUSDT
WORKER_TIMEFRAME=2m
WORKER_STREAM_BLOCK_MS=15000
WORKER_CATCHUP_THRESHOLD_MS=15000
WORKER_ROUTER_REFRESH_SECONDS=60
WORKER_BALANCE_TTL_SECONDS=30
BINANCE_CONNECTOR=modular
DRY_RUN_MODE=false

# Ingestor
PAIRS_1M=BTCUSDT:1m,ETHUSDT:1m
BACKFILL_ON_START=true
BACKFILL_1M_LIMIT=500
BACKFILL_MIN_2M=150
STREAM_MAXLEN_1M=5000
STREAM_MAXLEN_2M=5000
STREAM_RETENTION_MS_1M=0
STREAM_RETENTION_MS_2M=0

# Calc2
PRICE_TICK_DEFAULT=0.01
STREAM_MAXLEN_IND=5000
STREAM_MAXLEN_SIGNAL=2000
STREAM_RETENTION_MS_IND=0
STREAM_RETENTION_MS_SIGNAL=0

# Optional Binance defaults for scripts (per-user creds are stored encrypted via /credentials)
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true
